{
  "name": "mern_emission_tracker",
  "version": "1.0.0",
  "description": "Emission tracker built with the MERN stack",
  "main": "server.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/garethcdobson/MERN_Emission_Tracker.git"
  },
  "author": "Gareth Dobson",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/garethcdobson/MERN_Emission_Tracker/issues"
  },
  "homepage": "https://github.com/garethcdobson/MERN_Emission_Tracker#readme",
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "concurrently": "^5.3.0",
    "express": "^4.17.1",
    "mongoose": "^5.11.14",
    "react-redux": "^7.2.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.7"
  }
}
